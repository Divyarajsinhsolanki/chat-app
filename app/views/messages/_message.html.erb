<div class="cont-<%= message.user.id %>">
  <div class="message-box msg-<%= message.user.id %> " >
    <div style="margin: 0 10px;text-align:left;"class="btn btn-info"><h5><%= message.user.name if sameuser.present? %></h5>
      <% if message.content.present? %>
        <div id="sameuser-<%= message.id %>" >
          <%= message.content %>
        </div>
      <% end %>
      <div id="message-photo">
        <% if message.photo.attached? %>
          <%=  image_tag message.photo,style: "width:100px;height:100px;" %>
        <% end %>
      </div>
    </div><br>
  </div>
</div>
